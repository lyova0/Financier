<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".learn_more">

        <ImageView
            android:id="@+id/post_type_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/financier_icon"/>

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project name"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/post_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post type"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/post_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post user"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/post_presentation"
        android:layout_width="367dp"
        android:layout_height="232dp"
        android:layout_marginTop="170dp"
        android:text="Post presentation"
        android:textColor="@color/gray"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post amount"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="410dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/post_user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post user number"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="450dp"
        android:textColor="@color/gray" />


</RelativeLayout>