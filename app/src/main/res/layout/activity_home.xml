<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/home">
    <TextView
        android:id="@+id/welcome_fn"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to Financier"
        android:textColor="@color/start_color"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"/>


    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="329dp"
        android:layout_centerInParent="true"
        android:background="@drawable/blue_border"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/profile_page" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/project1_name_financier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project name"
                android:textColor="@color/start_bt_color"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project user"
                android:textColor="@color/start_bt_color"
                android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/project1_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project type"
            android:textColor="@color/start_bt_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/summary_of_the_idea_financier1"
            android:layout_width="329dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:text="Summary of the idea"
            android:textColor="@color/start_bt_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/amount_to_be_collected_financier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Amount to be collected"
            android:textColor="@color/start_bt_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/to_learn_more_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/start_bt_color"
            android:text="To learn more"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="165dp"
        android:backgroundTint="@color/start_bt_color"
        android:text="next" />

    <Button
        android:id="@+id/previous_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:backgroundTint="@color/start_bt_color"
        android:layout_marginBottom="165dp"
        android:text="previous" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_first"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="135dp"
            android:background="@drawable/plus_icon_first"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="125dp"
            android:background="@drawable/profile_first"
            android:contentDescription="@string/app_name" />
    </LinearLayout>



</RelativeLayout>